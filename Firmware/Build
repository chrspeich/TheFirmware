
var :define, [ "-D__USE_CMSIS=1" ]
var :cflags, [ '$define', '-fno-builtin', '-Wall', '-Werror', "-I#{path('..')}", '-Wno-deprecated-register', '-nostdinc', '-I/Users/christian/Documents/Projects/TheFirmware/Toolchain/arm.toolchain/bin/../lib/clang/3.4/include/', '-I/Users/christian/Documents/Projects/TheFirmware/Toolchain/arm-gcc.toolchain/arm-none-eabi/include']
var :cxxflags, [ '$cflags', '-fno-exceptions', '-fno-rtti', '-fno-unwind-tables', '-Wno-c++98-compat-pedantic']
var :ldflags, [ "-nostdlib", '-lgcc' ]

if options.debug
  var :define, [ '-DDEBUG=1' ]
  var :cflags, [ '-ggdb' ]
else
  var :cflags, [ '-Os' ]
end

file 'Console/*.{cc,c}'
file 'Devices/*.{cc,c}'
file 'IO/*.{cc,c}'
file 'Schedule/*.{cc,c}'
file 'Time/*.{cc,c}'
file 'Utils/*.{cc,c}'
file '*.{cc,c}'

build '$builddir/FirmwareInfo.gen.cc', 'gen'
build '$builddir/FirmwareInfo.gen.cc.o', 'cxx', '$builddir/FirmwareInfo.gen.cc'
objects << '$builddir/FirmwareInfo.gen.cc.o'

build 'firmware.elf', 'ld', objects, '$linker_file'

parse 'Target/*/Build'